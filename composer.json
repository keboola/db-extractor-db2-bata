{
    "name": "keboola/db-extractor-db2",
    "license": "MIT",
    "type": "Application",
    "description": "Reads data from IBM DB2 databases for keboola connection",
    "require": {
        "keboola/db-extractor-common": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3"
    },
    "authors": [
        {
            "name": "Miroslav Cillik",
            "email": "miro@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "scripts": {
        "tests": "./wait-for-it.sh db2:50000 -t 30 -- ./vendor/bin/phpunit",
        "build": [
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
